@model ZabitaWebApplication.ViewModels.Rol_SubRol_ViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<div class="col-lg-4 col-lg-offset-4" style="padding:25px; margin-top:25px; background-color:white; border:solid">
    <h2>Rol Ekle</h2>
    @using (Html.BeginForm("Create", "Role", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div style="margin:10px">
            <label>Rol Adı Giriniz </label>
            @Html.EditorFor(m => m.RolAd)

        </div>
        <div class="col-lg-8 col-lg-offset-2">
            <ul>
                @for (int i = 0; i < Model.SubList.Count(); i++)
                {
                    <li>
                        <label>
                            @Html.HiddenFor(k => Model.SubList[i].ID)
                            @Html.CheckBoxFor(k => Model.SubList[i].Checked)
                            @Model.SubList[i].Name
                        </label>
                    </li>
                }
            </ul>
            <div class="text-center">
                <input type="submit" class="btn-success btn-block" value="Oluştur" />
            </div>
        </div>
    }
</div>