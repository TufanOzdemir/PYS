@model EBS.Data.Project

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
   
        <div class="col-md-6 col-md-offset-3 animate slideInRight" style="margin-top:50px;padding:50px;">
            <div class="panel panel-info">
                    <div class="text-center panel-heading"><h3>@Model.Name , İsmini Değiştir</h3> </div> 
                    <div class="text-center" style="padding:15px;">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Yeni Proje Adını Giriniz." } })
                    </div>

                <div class="text-center"><input style="margin-bottom:15px;" type="submit" value="Kaydet" class="w3-button w3-green text-center" /></div>
                    
                </div>



            </div>
 
   


}