
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Proje Yönetim Sistemi</title>
    <!-- Bootstrap -->
    <link href="~/Content/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/Content/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="~/Content/vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="~/Content/vendors/animate.css/animate.min.css" rel="stylesheet">
    <!-- Custom Theme Style -->
    <link href="~/Content/build/css/custom.min.css" rel="stylesheet">
</head>
<body class="login">
    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div>
            
            <div class="login_wrapper">
                
                <div class="animate form login_form">
                    
                    <section class="login_content">
                       
                        <form>
                            <div class="col-lg-12">
                                <img src="~/Content/Images/iulogo.png" width="400" height="400" class="img-responsive" />
                            </div>
                            <h1 class="text-capitalize">İnönü Üniversitesi</h1>
                            <h1 class="text-center"> Proje Yönetim Sistemi</h1>
                            <div class="clearfix"></div>
                            <div>
                                <input id="usr" type="text" class="form-control" placeholder="*Kullanıcı Adı" required="true" name="Username" />
                            </div>
                            <div class="clearfix"></div>
                            <br />
                         
                            <div>
                                <input id="pass" type="password" class="form-control" placeholder="*Parola" required="true" name="Password" />
                            </div>
                            <div class="clearfix"></div>
                            <br />
                            <br />
                            <div>
                                <input type="submit" class="btn btn-warning submit" value="Giriş Yap" />
                                @Html.ActionLink("Parolamı Unuttum", "ForgotPassword", "Home")
                            </div>
                            <div class="clearfix"></div>
                            <div class="separator">

                                <div class="clearfix"></div>
                                <br />
                                <div>
                                    <h1><i class="fa fa-paw"></i> Umay</h1>
                                    <p>©2017 Umay | Tüm Hakları Saklıdır.</p>
                                </div>
                            </div>
                        </form>
                    </section>

                </div>
            </div>
        </div>
    }

</body>
</html>


