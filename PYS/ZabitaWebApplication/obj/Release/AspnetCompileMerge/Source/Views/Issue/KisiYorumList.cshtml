@model IEnumerable<ZabitaWebApplication.Models.Comment>

@{
    ViewBag.Title = "KisiYorumList";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


@helper Truncate(string input, int length)
{

if (input.Length <= length)
{

        @input
}
else
{
        @input.Substring(0, length)<text>...</text>
}
}

<h2>Yorumlarım</h2>

<table class="table">
    <tr>
        <th>
            Görev Adı
        </th>
        <th>
            Atılış Tarihi
        </th>
        <th>
            İçeriği
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Truncate(item.Issue.Name,50)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Truncate(item.Description,50)
        </td>
        <td>
            @Html.ActionLink("Güncelle", "YorumGuncelle", new { id=item.ID }) |
            @Html.ActionLink("Sil", "YorumSil", new { id=item.ID })
        </td>
    </tr>
}

</table>
