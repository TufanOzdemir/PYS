@model ZabitaWebApplication.Models.Issue

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="col-md-4 col-md-offset-4 panel panel-danger">
    <h2>@Model.Name Isimli Görevi</h2>

    <h3>Silmek istediğine emin misin?</h3>
    <div>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Sil" class="btn btn-red" />
            </div>
        }
    </div>
</div>